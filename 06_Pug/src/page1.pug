doctype
html(lang="idioma")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title titulo
    body
        h1 Pug Avanzado.

        //- Lógica mediante JS
        //-let nombre = "Pepe"
        -let nombre = "María"
        -if (nombre ==='Pepe') {
            p Hola otra vez, Pepe
        - } else {
            p Hola #{nombre}, ¿donde está Pepe?
        - }

        //- Lógica nativa (built-in) Pug

        //- Copndicional IF

        //- - nombre = "Pepe"
        - nombre = "Rosa"
        if (nombre ==='Pepe') 
            p Hola otra vez, Pepe
        else
            p Hola #{nombre}, ¿donde está Pepe?

        //- Condicional CASE
        //- - name = "Pepe"
        - name = "Alicia"
        //- - name = "Juan"
        case name
            when "Pepe"
                p Hola Pepe, ¿como estás?
            when "Alicia"
                p Que tal Alicia
            default
                p Hola #{name}!

        //- Iteraciones EACH

        - let aSecciones = ['Inicio', 'Porfolio', 'Clientess', 'About']
        nav
            ul
                each seccion in aSecciones
                    li: a(href="#"+seccion.toLowerCase())= seccion
        
        //- -let aOpciones = [{nombre: 'C#', codigo: '37'}, {nombre: 'Java', codigo: '84'}, {nombre: 'JavaScript', codigo: '13'}]
        -let aOpciones = cursos
        -let optName = 'cursos'
        form(action="")
         label(for=optName) Selecciona un curso
         select(name=optName id=optName)
            each opcion in aOpciones
                option(value=opcion.codigo)= opcion.nombre
            button(type="submit") Enviar
                
            


                
        